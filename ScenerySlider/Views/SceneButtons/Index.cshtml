@model IEnumerable<ScenerySlider.Models.SceneButton>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OwnerScene.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TargetScene.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Icon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PositionX)
        </th>
