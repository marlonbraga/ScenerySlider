@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerScene.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TargetScene.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Icon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PositionX)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PositionY)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rotation)
        </td>
