<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Scenery Slider</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar">Users</span>
                    <span class="icon-bar">Projects</span>
                    <span class="icon-bar">c</span>
                </button>
                @Html.ActionLink("Scenery Slider", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Users", "Details", "Users")</li>
                    <li>@Html.ActionLink("Projects", "Details", "Projects")</li>
                    <li>@Html.ActionLink("Scenes", "Details", "Scenes")</li>
                    <li>@Html.ActionLink("SceneChangeButtons", "Details", "SceneChangeButtons")</li>
                    <li>@Html.ActionLink("InformationSpots", "Details", "InformationSpots")</li>
                    <li>@Html.ActionLink("InformationSpotButtons", "Details", "InformationSpotButtons")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Marlon Braga</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
